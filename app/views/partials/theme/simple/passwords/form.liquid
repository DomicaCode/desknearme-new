<form action="/passwords" method="post" class="w-full mx-auto card-lg">
  {% include 'authenticity_token' %}

  <label class="block mt-3" for="password">
    <span class="block">{{ 'app.passwords.password' | t }}</span>
    <input name="password[password]" type="password" id="password" class="w-full form-input" value="{{object.password}}" autocomplete="new-password"/>
    {% include 'theme/simple/field_error', errors: object.errors.password %}
  </label>

  <label class="block mt-3" for="password_confirmation">
    <span class="block">{{ 'app.passwords.password_confirmation' | t }}</span>
    <input name="password[password_confirmation]" type="password" id="password_confirmation" class="w-full form-input" value="{{object.password_confirmation}}" autocomplete="off" />
    {% include 'theme/simple/field_error', errors: object.errors.password_confirmation %}
  </label>

  <button class="mt-3 button">{{ 'app.passwords.password_update' | t }}</button>
</form>

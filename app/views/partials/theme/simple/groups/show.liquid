<div class="container">
  <div class="p-16 bg-content">
    <h2 class="text-center bigtitle text-content-inverted">
      {{ group.name }}
    </h2>
    <h3 class="text-center subtitle text-content-inverted">
      {{ group.summary }}
    </h3>
  </div>

  {% render 'theme/simple/groups/nav', group: group, tab: tab, current_profile: current_profile %}

  {% liquid
    case tab
    when 'activity'
      include 'theme/simple/groups/activity', list: list, group: group, current_profile: current_profile
    when 'content'
      include 'theme/simple/groups/content', list: list, group: group, current_profile: current_profile
    when 'about'
      render 'theme/simple/groups/about', list: list, group: group
    when 'members'
      render 'theme/simple/groups/members', list: list, group: group, current_profile: current_profile
    when 'invitations'
      render 'theme/simple/groups/invitations', group: group, list: list, current_profile: current_profile
    endcase
  %}
</div>

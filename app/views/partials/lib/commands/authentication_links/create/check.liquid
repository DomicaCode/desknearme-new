{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  function c = 'lib/validations/presence', c: c, object: object, field_name: 'email'
  function c = 'lib/validations/presence', c: c, object: object, field_name: 'host'
  function c = 'lib/validations/presence', c: c, object: object, field_name: 'token'

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object

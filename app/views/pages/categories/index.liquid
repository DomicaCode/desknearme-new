---
slug: categories/*category_key
---
{% liquid
  function current_profile = 'lib/current_profile', user_id: context.current_user.id

  function category = 'lib/queries/categories/find', key: context.params.category_key
  include 'lib/present_or_404', property: category

  assign header_text = 'categories.' | append: category.key | t
  include 'theme/simple/items/list', query: query, lang: context.language, current_profile: current_profile, header_text: header_text
%}

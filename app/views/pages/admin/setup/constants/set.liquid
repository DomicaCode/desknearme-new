---
method: post
---
{% liquid
  function current_profile = 'lib/current_profile', user_id: context.current_user.id
  include 'lib/must_be_superadmin', profile: current_profile
  assign constant_name = context.params.name
  function object = 'lib/commands/constants/set', name: constant_name, value: context.params.value

  if object.valid
    include 'redirect_to', url: '/admin/setup', notice: 'admin_old.saved'
  else
    echo context.constants[constant_name]
    echo context.params
    echo object
    break
  endif
%}
